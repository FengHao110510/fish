<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.big.fishcash.cash.ui.MainActivity">


    <!--content-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/abl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/main_color"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/toolbarMenuStyle">

            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:id="@+id/fl_main_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></FrameLayout>


        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/share"
            android:layout_marginRight="16dp"/>

        <View style="@style/view_line_horizontal_1" />

        <include layout="@layout/module_main_bottom_bar"
            android:layout_gravity="bottom"
            android:layout_height="56dp"
            android:layout_width="match_parent" />
    </android.support.design.widget.CoordinatorLayout>


    <!--menu-->
    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/module_activity_start_main" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
