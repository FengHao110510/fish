<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.big.fishcash.cash.ui.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View style="@style/view_line_horizontal_05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/ll_main_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_news_icon"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_news"
                android:textColor="@color/gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_main_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="新闻"

                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_books"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_books_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_books"
                android:textColor="@color/gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_main_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="书籍"

                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
