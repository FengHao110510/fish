<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_first_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_first"
                android:textColor="@color/gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_main_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="首页"

                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_knowledge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_knowledge_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_knowledge"
                android:textColor="@color/gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_main_knowledge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="知识体系"

                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_navigation_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_navigation"
                android:textColor="@color/gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_main_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="导航"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_project_icon"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_project"
                android:textColor="@color/gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_main_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="项目"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>